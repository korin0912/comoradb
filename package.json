{
  "name": "comoradb",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "run-p serve:*",
    "build": "vite build --mode production",
    "lint": "eslint lint src",
    "daily-update": "run-s daily-update:{build,git-push}",
    "daily-update:build": "npm run build",
    "daily-update:git-push": "git add . && git commit -m \"daily update\" && git push",
    "serve:daily-update-server": "node .\\tools\\daily_update_server.js",
    "serve:json-edit-server": "node .\\tools\\json_edit_server.js",
    "serve:vue-cli-service": "vite dev"
  },
  "dependencies": {
    "@vueuse/head": "^2.0.0",
    "axios": "^1.6.5",
    "core-js": "^3.35.0",
    "vue": "^3.4.15",
    "vue-router": "^4.2.5",
    "vue3-burger-menu": "^1.1.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.3",
    "@vue/compiler-sfc": "^3.4.15",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.20.1",
    "npm-run-all": "^4.1.5",
    "vite": "^7.1.6"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "no-console": 0
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
